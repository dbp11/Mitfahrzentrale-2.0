%h2 Fahrzeugdetails
%div.other_site
  = link_to image_tag( '/images/Button_edit.png', :alt => "Editieren", :height => "20"), edit_car_path(@car)
%table.cars_show_index
  %tr 
    %td
      %table.cars_show_left
        %tr
          %td Modell
          %td= @car.car_type
        %tr 
          %td Sitzpl&auml;tze
          %td= @car.seats
        %tr
          %td Fahrtkosten
          %td= @car.price_km

        %tr
          %td Raucherwagen
          %td= @car.smoker? ? "ja" :"nein"
        %tr
          %td Nummernschild
          %td= @car.licence
        %tr
          %td Beschreibung
          %td= @car.description
    %td.cars_show_right
      - if @car.carpic?
        = image_tag @car.carpic.url(:medium)
      - else
        = image_tag ('/images/cars/Default_car_icon2.png')


