.other-site
  = link_to image_tag( '/images/Button_new_query.png', :alt => "Neue Anfrage", :height => "20"), new_request_path
%h2 Suche nach Fahrer

%table.index_table
  %tr.index_table_first
    %td Von
    %td Bis
    %td Startzeit
    %td Fahrzeit*
    %td Gepäck
    %td Anzeigen
  - @requests.each do |request|
    %tr.index_table_second
      
      %td= request.start_zipcode.to_s + " " + request.start_city + " " 
      %td= request.end_zipcode.to_s + " " + request.end_city
      %td= request.start_time.strftime("%d.%m.%Y %H:%M")
      %td= request.get_route_duration
      %td= request.baggage? ? "Ja" : "Nein"
      %td= link_to image_tag( '/images/Button_show.png', :alt => "Anzeigen", :height => "20"), request


