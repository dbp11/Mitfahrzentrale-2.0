<%- if controller_name != 'sessions' %>
  <%= link_to image_tag( '/images/Button_login.png'), new_session_path(resource_name) %><br />
  <br />

<% end -%>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to image_tag( '/images/Button_register.png'), new_registration_path(resource_name) %><br /><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to image_tag( '/images/Button_lost_pw.png'), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "eMail nicht bekommen?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Optionen zum entsperren nicht erhalten?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
